<?xml version="1.0" encoding="UTF-8"?>
<update xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofw.fi/xml/2011/java-xmldb-updater/UpdaterSchema.xsd">

  <createTables>
    <table name="ClientApplication" primaryKeys="id">
      <fields>
        <field name="id" type="java.lang.Long" nullable="false" unique="true" />

        <field name="clientName" type="java.lang.String" nullable="false" unique="false" />
        <field name="clientId" type="java.lang.String" nullable="false" unique="true" />
        <field name="clientSecret" type="java.lang.String" nullable="false" unique="false" />
      </fields>
    </table>
  </createTables>
</update>