<?xml version="1.0" encoding="UTF-8"?>
<update xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofw.fi/xml/2011/java-xmldb-updater/UpdaterSchema.xsd">

  <alterTables>
    <table name="User">
      <addFields>
      	<field name="externalId" type="java.lang.String" nullable="true" unique="false" />
        <field name="authProvider" type="java.lang.String" nullable="true" unique="false" />
      </addFields>
    </table>    
  </alterTables>
  
  <sql>update User u, StaffMember m set u.externalId = m.externalId, u.authProvider = m.authProvider where u.id = m.id</sql>
  
  <alterTables>
    <table name="StaffMember">
      <dropFields>
        <field name="externalId"/>
        <field name="authProvider"/>
      </dropFields>
    </table>    
  </alterTables>
  
</update>